@model BibliotecaGustavoGtz.Models.Domain.Author

@{
    Layout = "_LayoutDashboard";
}

<h1 class="text-center mt-3">Editar Autor</h1>

<div class="container">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-warning text-white text-center">
            <h2>Editar Autor</h2>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="PkAuthor" />

                <div class="form-group mb-3">
                    <label asp-for="Name_author" class="form-label">Nombre del autor</label>
                    <input asp-for="Name_author" class="form-control" required />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Birth_date" class="form-label">Fecha de nacimiento</label>
                    <input asp-for="Birth_date" class="form-control" type="date" required />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description_author" class="form-label">Descripción</label>
                    <textarea asp-for="Description_author" class="form-control" rows="3" required></textarea>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Num_works" class="form-label">Número de obras</label>
                    <input asp-for="Num_works" class="form-control" type="number" required />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Origin" class="form-label">Origen</label>
                    <input asp-for="Origin" class="form-control" required />
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success px-4">Guardar</button>
                    <a asp-action="Index" class="btn btn-secondary px-4">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .container {
        max-width: 600px;
        margin-top: 30px;
    }

    .card {
        border-radius: 10px;
        overflow: hidden;
    }

    .card-header {
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

    .form-control {
        border-radius: 8px;
        transition: 0.3s ease-in-out;
    }

    .form-control:focus {
        border-color: #ff9800;
        box-shadow: 0px 0px 8px rgba(255, 152, 0, 0.5);
    }

    .btn {
        border-radius: 8px;
        font-size: 1rem;
    }

    .btn:hover {
        transform: scale(1.05);
        transition: 0.2s ease-in-out;
    }
</style>
