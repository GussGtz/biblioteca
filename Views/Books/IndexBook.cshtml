@model IEnumerable<BibliotecaSánchezLobatoGael83.Models.Domain.Book>

@{
    Layout = "_LayoutDashboard";
}

<div class="row">
    @foreach (var book in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card text-center d-flex flex-column align-items-center p-3 shadow-lg"
                 style="border-radius: 15px; border: none; transition: transform 0.3s ease, box-shadow 0.3s ease;">
                <div class="d-flex justify-content-center align-items-center" style="height: 200px; width: 100%;">
                    <img src="https://imgs.search.brave.com/tgqDxz3-sYyWTOhlArY8nGW5WRn2ggO4ySgs0al3cOA/rs:fit:860:0:0:0/g:ce/aHR0cHM6Ly9tZWRp/YS5nZXR0eWltYWdl/cy5jb20vaWQvMTgz/ODkwMjY0L2VzL2Zv/dG8vdmVydGljYWwt/ZWwtbGlicm8tcm9q/by1jb24tdHJhemFk/by1kZS1yZWNvcnRl/LmpwZz9zPTYxMng2/MTImdz0wJms9MjAm/Yz1ZUk90OXRJV0Ez/MmoyU0VkTEJ2SFR5/MEJuM3A3MmJkWEMz/VWdhVFZfT01JPQ"
                         class="img-fluid"
                         style="max-width: 70%; max-height: 100%; object-fit: contain; border-radius: 10px;"
                         alt="Imagen de libro">
                </div>
                <div class="card-body d-flex flex-column align-items-center text-center">
                    <h5 class="card-title" style="font-size: 1.25rem; font-weight: bold; color: #343a40;">@book.Name_book</h5>
                    <p class="card-text" style="font-size: 0.9rem; color: #6c757d;">Autor: @book.Authors.Name_author</p>
                    <p class="card-text" style="font-size: 0.9rem; color: #6c757d;">Categoría: @book.Topics.Name_topic</p>
                    <a href="@Url.Action("Details", "Books", new { id = book.PkBook })"
                       class="btn btn-primary mt-auto"
                       style="background: linear-gradient(135deg, #007bff, #0056b3); border: none; border-radius: 8px; padding: 8px 20px; font-size: 0.9rem; transition: background 0.3s ease, transform 0.3s ease;">
                        Detalles
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .card {
        background: #fff;
        border: none;
        border-radius: 15px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0px 15px 30px rgba(0, 0, 0, 0.2);
        }

    .card-title {
        font-size: 1.25rem;
        font-weight: bold;
        color: #343a40;
        margin-bottom: 10px;
    }

    .card-text {
        font-size: 0.9rem;
        color: #6c757d;
        margin-bottom: 5px;
    }

    .btn-primary {
        background: linear-gradient(135deg, #007bff, #0056b3);
        border: none;
        border-radius: 8px;
        padding: 8px 20px;
        font-size: 0.9rem;
        color: #fff;
        transition: background 0.3s ease, transform 0.3s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #0056b3, #007bff);
            transform: translateY(-2px);
        }

    .shadow-lg {
        box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.1);
    }
</style>