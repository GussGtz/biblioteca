@model BibliotecaGustavoGtz.Models.Domain.Collection

@{
    Layout = "_LayoutDashboard";
}

<h2>Edit Collection</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="PkCollection" />

    <div class="form-group">
        <label asp-for="Name_collection"></label>
        <input asp-for="Name_collection" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="FKAuthor">Author</label>
        <select asp-for="FKAuthor" class="form-control" asp-items="ViewBag.Authors"></select>
    </div>

    <div class="form-group">
        <label asp-for="FKTopic">Topic</label>
        <select asp-for="FKTopic" class="form-control" asp-items="ViewBag.Topics"></select>
    </div>

    <div class="form-group">
        <label asp-for="Pieces"></label>
        <input asp-for="Pieces" class="form-control" type="number" min="1" required />
    </div>

    <button type="submit" class="btn btn-success">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
