@model BibliotecaSánchezLobatoGael83.Models.Domain.Usuario

@{
    Layout = "_LayoutDashboard";
}

<h1>Creacion de Usuario</h1>

<div v class="container-fluid">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h1 class="text-white"><strong>Crear usuario</strong></h1>

            </div>

            <div class="card-body">

                <form asp-action="Crear" method="post">


                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre" required />

                    </div>

                    <div class="form-group">
                        <label asp-for="UserName" class="control-label"></label>
                        <input asp-for="UserName" class="form-control" placeholder="Ingresa el usuario" required />

                    </div>

                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" placeholder="Ingresa la contraseña" required />

                    </div>

                    <div class="form-group">
                        <label class="control-label">Rol</label>
                        <select asp-for="FKRol" asp-items="ViewBag.Roles" class="select2-placeholder-multiple form-control">
                            <option value="">-- Selecciona --</option>
                        </select>
                    </div>


                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-secondary d-block mx-auto"><i class="bi bi-person-fill"></i> Guardar</button>
                    </div>


                </form>

                <a asp-controller="Usuario" asp-action="Index" class="btn btn-primary">Volver</a>


            </div>


        </div>


    </div>




</div>
