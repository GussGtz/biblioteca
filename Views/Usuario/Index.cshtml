@model IEnumerable<BibliotecaSánchezLobatoGael83.Models.Domain.Usuario>

@{
    Layout = "_LayoutDashboard";
}

<h1>Usuarios</h1>

<div class="row">
    <div class="offset-10 col-3 mb-3">
        <a asp-action="Crear" asp-controller="Usuario" class="btn btn-success mx-auto">
            <i class="fa-solid fa-user"></i> Nuevo
        </a>
    </div>
</div>

<div class="container-fluid">
    <div class="card border">
        <div class="card-header bg-dark">
            <h1 class="text-white"><strong>Lista de usuarios</strong></h1>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                @if (Model.Count() > 0)
                {
                    <table class="table table-bordered" id="tblUsuarios" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(x => x.Nombre)</th>
                                <th>@Html.DisplayNameFor(x => x.UserName)</th>
                                <th>@Html.DisplayNameFor(x => x.Password)</th>
                                <th>Rol</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var Item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(x => Item.Nombre)</td>
                                    <td>@Html.DisplayFor(x => Item.UserName)</td>
                                    <td>@Html.DisplayFor(x => Item.Password)</td>
                                    <td>@Html.DisplayFor(x => Item.Roles.Nombre)</td>
                                    <td>
                                        <a class="btn btn-warning" asp-action="Editar" asp-route-id="@Item.PkUsuario">
                                            <i class="fa-solid fa-pen-to-square"></i> Editar
                                        </a>
                                        <button type="button" class="btn btn-danger eliminar-articulo" data-id="@Item.PkUsuario">
                                            <i class="fa-solid fa-trash"></i> Eliminar
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>No hay registros</p>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Inicialización de DataTable con configuración para idioma y búsqueda
            $('#tblUsuarios').DataTable({
                language: {
                    "decimal": "",
                    "emptyTable": "No hay información",
                    "info": "Mostrando _START_ a _END_ de _TOTAL_ Entradas",
                    "infoEmpty": "Mostrando 0 a 0 de 0 Entradas",
                    "infoFiltered": "(Filtrado de _MAX_ total entradas)",
                    "lengthMenu": "Mostrar _MENU_ Entradas",
                    "loadingRecords": "Cargando...",
                    "processing": "Procesando...",
                    "search": "Buscar:",
                    "zeroRecords": "Sin resultados encontrados",
                    "paginate": {
                        "first": "Primero",
                        "last": "Último",
                        "next": "Siguiente",
                        "previous": "Anterior"
                    }
                },
                pageLength: 10, // Definir el número de registros por página
                responsive: true // Hacer la tabla responsive
            });

            // Función para confirmar eliminación de usuario
            $('.eliminar-articulo').on('click', function () {
                Swal.fire({
                    title: "¿Estás seguro de eliminar este usuario?",
                    text: "No podrás revertir esto!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Sí, deseo borrar!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        var usuarioId = $(this).data('id');
                        $.ajax({
                            url: '/Usuario/Eliminar/' + usuarioId,
                            type: 'POST',
                            success: function (data) {
                                if (data.success) {
                                    Swal.fire({
                                        title: "Eliminado!",
                                        text: "El usuario ha sido eliminado correctamente.",
                                        icon: "success",
                                        timer: 700
                                    });
                                    location.reload(); // Recarga la página
                                }
                            }
                        });
                    }
                });
            });
        });
    </script>
}
