@using BibliotecaSánchezLobatoGael83.Models.Domain

@{
    Layout = "_LayoutDashboard";
}

<div class="container mt-4">
    <h2>Asignar Libros a Usuario</h2>
    <form method="post">
        <div class="mb-3">
            <label for="usuario" class="form-label">Selecciona el Usuario</label>
            <select id="usuario" name="usuarioId" class="form-control">
                @foreach (var usuario in ViewBag.Usuarios as List<Usuario>)
                {
                    <option value="@usuario.PkUsuario">@usuario.Nombre</option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">Selecciona los Libros</label>
            <div style="border: 1px solid #ccc; padding: 10px; height: 300px; overflow-y: auto;">
                @foreach (var libro in ViewBag.Libros as List<Book>)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="selectedBooks" value="@libro.PkBook" id="libro-@libro.PkBook">
                        <label class="form-check-label" for="libro-@libro.PkBook">
                            @libro.Name_book
                        </label>
                    </div>
                }
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Asignar Libros</button>
    </form>
</div>