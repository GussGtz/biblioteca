@model IEnumerable<BibliotecaSánchezLobatoGael83.Models.Domain.Usuario>

@{
    Layout = "_LayoutDashboard";
}

<h1 class="text-center mb-4">📚 Asignación de Libros</h1>

@if (User.IsInRole("Admin"))
{
    <div class="row">
        <div class="offset-10 col-3 mb-3">
            <a href="@Url.Action("Create", "UsuarioBook")" class="btn btn-success mx-auto">
                <i class="fa-solid fa-book"></i> Asignar Libros
            </a>
        </div>
    </div>
}

<div class="container-fluid">
    <div class="card border">
        <div class="card-header bg-dark">
            <h1 class="text-white"><strong>Lista de Usuarios</strong></h1>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                @if (Model != null && Model.Any())
                {
                    <table class="table table-hover table-striped">
                        <thead class="table-header">
                            <tr>
                                <th>Nombre</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var usuario in Model)
                            {
                                <tr class="table-row">
                                    <td>@usuario.Nombre</td>
                                    <td>
                                        <a href="@Url.Action("Details", "UsuarioBook", new { id = usuario.PkUsuario })" class="btn btn-info btn-sm">
                                            <i class="fa-solid fa-eye"></i> Ver Detalles
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-center text-muted">No hay usuarios registrados.</p>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 10px;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        background: linear-gradient(135deg, #343a40, #212529);
        border-radius: 10px 10px 0 0;
    }

        .card-header h1 {
            font-size: 1.75rem;
            font-weight: bold;
            margin: 0;
        }

    /* Estilos para la tabla */
    .table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 10px;
    }

    .table-header {
        background: linear-gradient(135deg, #007bff, #0056b3);
        color: white;
    }

        .table-header th {
            padding: 15px;
            font-weight: bold;
            text-align: left;
        }

    .table-row {
        background: white;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-radius: 10px;
    }

        .table-row:hover {
            transform: translateY(-5px);
            box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.1);
        }

        .table-row td {
            padding: 15px;
            border-bottom: 1px solid #f0f0f0;
        }

    /* Estilos para los botones de acciones */
    .btn-sm {
        padding: 5px 10px;
        font-size: 0.9rem;
    }

    .btn-info {
        background-color: #17a2b8;
        border-color: #17a2b8;
    }

        .btn-info:hover {
            background-color: #138496;
            border-color: #117a8b;
        }

    /* Estilos para el mensaje de "No hay usuarios" */
    .text-muted {
        font-size: 1.2rem;
        color: #6c757d;
    }
</style>